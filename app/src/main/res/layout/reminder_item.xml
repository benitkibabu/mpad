<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@android:color/holo_red_light">

            <ImageButton
                android:id="@+id/del_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/remove_text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_delete_variant_white_48dp"
                android:textColor="@color/white" />

            <!--<LinearLayout-->
                <!--android:id="@+id/deletBtnHolder"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="?android:attr/selectableItemBackground"-->
                <!--android:clickable="true"-->
                <!--android:focusable="true"-->
                <!--android:orientation="horizontal" />-->

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardElevation="4dp"
            card_view:cardBackgroundColor="@android:color/holo_purple">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/moduleNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:layout_toStartOf="@+id/dateTv"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/descriptionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:layout_below="@+id/moduleNameTv"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/remTv" />

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/remTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_blue"
                    android:text="New Text"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_below="@+id/dateTv"
                    android:layout_alignEnd="@+id/dateTv" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/mainHolder1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal" />

        </android.support.v7.widget.CardView>

    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>
